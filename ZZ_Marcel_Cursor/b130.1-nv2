    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --bg: #F5F5F7;
            --card: #FFFFFF;
            --text: #1D1D1F;
            --text-muted: #86868B;
            --border: #D2D2D7;
            --accent: #0071E3;
            --red: #FF3B30;
            --orange: #FF9500;
            --green: #34C759;
        }

        body {
            font-family: 'Manrope', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            padding: 24px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }

        .header-left h1 {
            font-size: 28px;
            font-weight: 800;
            margin-bottom: 4px;
        }

        .header-left p {
            color: var(--text-muted);
            font-size: 14px;
        }

        .header-right {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .search-box {
            padding: 12px 20px;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            width: 280px;
            background: var(--card);
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        }

        .btn {
            padding: 12px 24px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 700;
            border: none;
            cursor: pointer;
            background: var(--accent);
            color: white;
        }

        .summary-bar {
            display: flex;
            gap: 16px;
            margin-bottom: 24px;
        }

        .summary-card {
            background: var(--card);
            padding: 16px 24px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            gap: 16px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .summary-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .summary-card.urgente .summary-icon { background: #FFEBE9; }
        .summary-card.pendente .summary-icon { background: #FFF4E5; }
        .summary-card.ok .summary-icon { background: #E8F9ED; }

        .summary-info .number {
            font-size: 28px;
            font-weight: 800;
        }

        .summary-card.urgente .number { color: var(--red); }
        .summary-card.pendente .number { color: var(--orange); }
        .summary-card.ok .number { color: var(--green); }

        .summary-info .label {
            font-size: 13px;
            color: var(--text-muted);
            font-weight: 500;
        }

        .kanban {
            display: grid;
            grid-template-columns: 1fr 1.5fr 1fr;
            gap: 20px;
            height: calc(100vh - 220px);
        }

        .column {
            background: var(--card);
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        }

        .column-header {
            padding: 20px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .column.urgente .column-header { background: linear-gradient(135deg, #FFEBE9 0%, #FFF 100%); }
        .column.pendente .column-header { background: linear-gradient(135deg, #FFF4E5 0%, #FFF 100%); }
        .column.ok .column-header { background: linear-gradient(135deg, #E8F9ED 0%, #FFF 100%); }

        .column-title {
            font-size: 16px;
            font-weight: 800;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .column.urgente .column-title { color: var(--red); }
        .column.pendente .column-title { color: var(--orange); }
        .column.ok .column-title { color: var(--green); }

        .column-count {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 15px;
            font-weight: 700;
        }

        .column.urgente .column-count { background: var(--red); color: white; }
        .column.pendente .column-count { background: var(--orange); color: white; }
        .column.ok .column-count { background: var(--green); color: white; }

        .cards-area {
            flex: 1;
            overflow-y: auto;
            padding: 12px 16px;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .product-card {
            background: var(--bg);
            border-radius: 14px;
            padding: 16px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .product-card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

        .card-top {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .product-name {
            font-size: 14px;
            font-weight: 700;
            line-height: 1.4;
            flex: 1;
            margin-right: 10px;
        }

        .curva {
            padding: 6px 10px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 800;
            color: white;
        }

        .curva.A { background: linear-gradient(135deg, #7C3AED, #9333EA); }
        .curva.B { background: linear-gradient(135deg, #3B82F6, #2563EB); }
        .curva.C { background: linear-gradient(135deg, #64748B, #475569); }
        .curva.D { background: linear-gradient(135deg, #94A3B8, #64748B); }

        .card-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
            margin-bottom: 14px;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
        }

        .detail-label {
            font-size: 10px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 2px;
        }

        .detail-value {
            font-size: 13px;
            font-weight: 600;
        }

        .detail-value.marca {
            color: var(--accent);
        }

        .card-actions {
            display: flex;
            gap: 8px;
        }

        .card-btn {
            flex: 1;
            padding: 10px;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 700;
            border: none;
            cursor: pointer;
            transition: all 0.15s;
        }

        .card-btn.comprar {
            background: var(--accent);
            color: white;
        }

        .card-btn.comprar:hover {
            background: #005BB5;
        }

        .card-btn.ignorar {
            background: var(--card);
            color: var(--text-muted);
        }

        .card-btn.ignorar:hover {
            background: #E5E5E7;
        }

        .card-btn.done {
            background: #D1FAE5;
            color: var(--green);
            flex: 1;
        }

        .specialist-badge {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--text);
            color: white;
            padding: 12px 20px;
            border-radius: 12px;
            font-size: 13px;
            font-weight: 600;
        }

        .grupo-tag {
            font-size: 11px;
            color: var(--text-muted);
            margin-top: 4px;
        }
    </style>
</head>
